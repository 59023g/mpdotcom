main#intro(class="bg-{{ $stateParams.project }}")
  section#content
    #top(ng-show="$stateParams.project === 'global-lives-project'")
      
      .images(ng-switch="isLoading")
        
        #spinnerWrap(ng-switch-when="true")
          #spinner

        .animate(ng-switch-when="false" ng-switch="isSuccessful")
          p(ng-switch-when="true" )
            img(ng-repeat="src in imageLocations" ng-src="{{ src }}" )
          p(ng-switch-when="false")
            | Error loading
    #left
      .images(ng-switch="isLoading" ng-hide="$stateParams.project === 'global-lives-project'")
        
        #spinnerWrap(ng-switch-when="true")
          #spinner
        
        .animate(ng-switch-when="false" ng-switch="isSuccessful")
          p(ng-switch-when="true" )
            img(ng-repeat="src in imageLocations" ng-src="{{ src }}"  )
          p(ng-switch-when="false")
            | POOPS
      
      div(ng-show="$stateParams.project === 'global-lives-project'")
        h2 {{ project.name }}
        p {{ project.copy }}
        ul
          li(ng-repeat="tag in project.tags") {{ tag }}
    #right 
      div(ng-hide="$stateParams.project === 'global-lives-project'")
        h2 {{ project.name }}
        p {{ project.copy }}
        ul
          li(ng-repeat="tag in project.tags") {{ tag }}
      a.cta(class="{{ $stateParams.project }}" href=" {{ project.url }} ") Visit
ui-view.project

