main#intro(class="bg-{{ $stateParams.project }}")
  #content
    .container-top(ng-show="project.layout === 'top'")
      #top
        .images
          img(ng-repeat="src in project.images" ng-src="{{ src }}" )
          

      #bottom 
         div(ng-show="project.layout === 'top'")
          h2 {{ project.name }}
          p(ng-repeat="copy in project.copy") {{ copy }}
          ul
            li(ng-repeat="tag in project.tags") {{ tag }}
      #cta 
        a.cta(class="{{ $stateParams.project }}" href=" {{ project.url }} " target="_blank") Visit     
   
    .container-side(ng-hide="project.layout === 'top'") 
      #left
        .images
          img(ng-repeat="src in project.images" ng-src="{{ src }}" )
  
      #right 
        div
          h2 {{ project.name }}
          p(ng-repeat="copy in project.copy") {{ copy }}
          ul
            li(ng-repeat="tag in project.tags") {{ tag }}
        a.cta(class="{{ $stateParams.project }}" href=" {{ project.url }} " target="_blank") Visit
      div(style="clear:both")
