// ANIMATIONS 
[ui-view]
  height 100%
  position absolute
  width 100%

.ui-view-container
  position relative
  height 100%
  width 100%
  
[ui-view].ng-enter,
[ui-view].ng-leave
  transition-timing-function ease
  transition-duration 250ms
  transition-property opacity

[ui-view].ng-enter
  opacity 0
  &.ng-enter-active
    opacity 1

[ui-view].ng-leave
  opacity 1
  &.ng-leave-active
    opacity 0


