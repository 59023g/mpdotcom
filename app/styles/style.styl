#controls 
  position relative
  width 100px //109
  height 30px // 38
  z-index 30
  border 1px solid rgba(255,255,255,.9)
  //background-color rgba(255,255,255, 1)
  -webkit-border-radius 5px 
  -moz-border-radius 5px
  border-radius 5px 
  #navigate-forward 
    opacity 1
    position absolute
    padding 0
    border 0 
    right 0px
    cursor pointer
  #navigate-back 
    opacity 1
    position absolute
    padding 0
    border 0 
    left 0
    cursor pointer

  .hidden
    opacity 0
    -webkit-transition all .2s ease
    -moz-transition all .2s ease
    -ms-transition all .2s ease
    -o-transition all .2s ease
    transition all .2s ease 
  .seen
    opacity 1
    -webkit-transition all .2s ease
    -moz-transition all .2s ease
    -ms-transition all .2s ease
    -o-transition all .2s ease
    transition all .2s ease    

   

